<p id="notice"><%=notice%></p>

<h1 class="text-4xl font-bold text-black mb-8">Sign In</h1>

<form action="/sessions" method="post" class="bg-black text-white p-8 rounded-lg">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div class="mb-4">
    <label for="email" class="block font-bold mb-2">Email</label>
    <input type="email" id="email" name="user[email]" value="<%= @user ? @user.email : '' %>" class="px-3 py-2 bg-gray-700 rounded-md w-full" />
  </div>

  <div class="mb-4">
    <label for="password" class="block font-bold mb-2">Password</label>
    <input type="password" id="password" name="user[password]" class="px-3 py-2 bg-gray-700 rounded-md w-full" />
  </div>
  
  <input type="submit" value="Sign In" class="bg-red-800 text-white py-2 px-4 rounded-md hover:bg-red-700 cursor-pointer" />
  <%= link_to "Sign up", signup_path, class: "text-gray-400 hover:text-white ml-2" %>

</form>
