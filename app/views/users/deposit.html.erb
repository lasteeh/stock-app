<h1>Deposit Money</h1>
<% flash.each do |type, message| %>
  <div class="alert alert-<%= type %>">
    <%= message %>
  </div>
<% end %>


<%= form_tag user_deposit_money_path, method: :post do %>
  <%= label_tag :amount, "Amount to deposit" %>
  <%= text_field_tag :amount %>
  <%= submit_tag "Deposit" %>
<% end %>
